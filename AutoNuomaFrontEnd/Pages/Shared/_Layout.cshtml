<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Auto Nuoma</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutoNuomaFrontEnd.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa; /* Light grey background */
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            justify-content: center; /* Center content horizontally */
        }

            .navbar-brand img {
                height: 80px; /* Reduced logo size */
                width: auto;
            }

            .navbar-brand span {
                margin-left: 10px;
                color: #343a40; /* Dark grey text */
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
                -webkit-text-stroke: 1px red;
                -webkit-text-fill-color: white;
                font-weight: bold; /* Bold text */
            }

        .navbar {
            background-color: #fff; /* White navbar background */
        }

        .container {
            max-width: 960px; /* Limit container width */
        }

        .footer {
            background-color: #343a40; /* Dark grey footer background */
            color: #fff; /* White text */
            padding: 15px 0; /* Padding top and bottom */
        }

            .footer a {
                color: #fff; /* White links */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="/images/logo.jpg" alt="Logo" />
                    <span>Auto Nuoma</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <!-- Center-align footer content -->
            &copy; 2024 - AutoNuoma - <a asp-area="" asp-page="/Index">Index</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
